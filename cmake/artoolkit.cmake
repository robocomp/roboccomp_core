IF( "$ENV{ARTOOLKITROOT}" STREQUAL "" )
  MESSAGE(STATUS "ARTOOLKITROOT environment variable not set." )
  MESSAGE(STATUS "This can be done in your user .bashrc file by appending the corresponding line, e.g:" )
  MESSAGE(STATUS "export ARTOOLKITRROOT=/usr/local/" )
  SET(ARTOOLKIT_FOUND 0)
ELSE( "$ENV{ARTOOLKITROOT}" STREQUAL "" )
  SET(ARTOOLKIT_LIBS -lARgsub -lARvideo -lARMulti -lAR -lglut)
  INCLUDE_DIRECTORIES( "$ENV{ARTOOLKITROOT}/include/")
  SET( LIBS ${LIBS} ${ARTOOLKIT_LIBS} -L$ENV{ARTOOLKITROOT}/lib/ )
  ADD_DEFINITIONS(-DCOMPILE_ARTOOLKIT=1)
  SET(ARTOOLKIT_FOUND 1)
ENDIF( "$ENV{ARTOOLKITROOT}" STREQUAL "" )
